{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Start Home Assistant",
        "type": "shell",
        "command": "supervisor_run",
        "group": {
          "kind": "test",
          "isDefault": true
        },
        "presentation": {
          "reveal": "always",
          "panel": "new"
        },
        "problemMatcher": []
      },
      {
        "label": "Run Env Setup",
        "type": "shell",
        "command": "${workspaceFolder}/.dev/setup.sh"
      },
      {
        "label": "Run Precommit Checks",
        "type": "shell",
        "command": "${workspaceFolder}/.dev/precommit.sh"
      }
    ]
  }
